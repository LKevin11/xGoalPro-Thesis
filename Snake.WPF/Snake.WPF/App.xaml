             xmlns:local="clr-namespace:Snake.WPF"
             >
    <Application.Resources>
        <SolidColorBrush x:Key="BackGroundColor">#0d1b2a</SolidColorBrush>
        <SolidColorBrush x:Key="GridBackGroundColor">#1b263b</SolidColorBrush>
        <SolidColorBrush x:Key="GridLineColor">#415a77</SolidColorBrush>
        <SolidColorBrush x:Key="TextColor">#e0e1dd</SolidColorBrush>
        <SolidColorBrush x:Key="OverlayColor">#7F000000</SolidColorBrush>
    </Application.Resources>
</Application>
